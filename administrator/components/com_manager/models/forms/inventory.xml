<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_manager/models/rules">
    <fieldset>

        <field  name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
                readonly="true" class="readonly"
                description="JGLOBAL_FIELD_ID_DESC" /> 

        <field  name="title" 
                type="text" 
                buttons="true"
                class="inputbox"
                filter="safehtml"
                required="true" 
                label="COM_MANAGER_FORM_LBL_MANAGER_TITLE" description="COM_MANAGER_FORM_DESC_MANAGER_TITLE"  />

        <field  name="description" 
                type="editor" 
                buttons="true"
                class="inputbox"
                filter="safehtml"                
                label="COM_MANAGER_FORM_LBL_MANAGER_DESCRIPTION" description="COM_MANAGER_FORM_DESC_MANAGER_CL"  />
                
        <field  name="cl" 
                type="text" 
                buttons="true"
                class="inputbox"
                filter="safehtml"                
                label="COM_MANAGER_FORM_LBL_MANAGER_CL" description="COM_MANAGER_FORM_DESC_MANAGER_CL"  />

        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field> 

        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

    </fieldset>

</form>
